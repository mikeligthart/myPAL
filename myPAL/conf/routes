# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

## APPLICATION ##
# Control flow
GET     /                           controllers.Application.login()
POST    /                           controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /private/*fileName          controllers.Application.getPicture(fileName)

# Hello goodbye
GET     /greeting                   controllers.Application.hello()

## DIARY ##
GET     /mypal                                      controllers.Diary.diary()
GET     /mypal/calendar                             controllers.Diary.calendar()
GET     /mypal/calendar/:update                     controllers.Diary.calendarUpdate(update:String)
GET     /mypal/calendar/:day/:month/:year           controllers.Diary.calendarSet(day:String, month:String, year:String)
GET     /mypal/goals                                controllers.Diary.goals()
GET     /mypal/addactivity                          controllers.Diary.addActivityPage()
POST    /mypal/addactivity                          controllers.Diary.addActivity()
GET     /mypal/addactivity/selectfromgallery/:id    controllers.Diary.selectFromGalleryPage(id: Int)
GET     /mypal/gallery                              controllers.Diary.gallery()
GET     /mypal/addpicture                           controllers.Diary.addPicturePage()
POST    /mypal/addpicture                           controllers.Diary.addPicture()
GET     /mypal/addpicture/directly/:id              controllers.Diary.addPictureDirectlyPage(id:Int)
POST    /mypal/addpicture/directly/:id              controllers.Diary.addPictureDirectly(id:Int)
GET     /mypal/activity/list                        controllers.Diary.getActivities()
GET     /mypal/activity/view/:id                    controllers.Diary.viewActivity(id:Int)
GET     /mypal/activity/delete/:id                  controllers.Diary.deleteActivity(id:Int)
GET     /mypal/activity/update/:id                  controllers.Diary.updateActivityPage(id:Int)
POST    /mypal/activity/update/:id                  controllers.Diary.updateActivity(id:Int)
GET     /mypal/activity/deletepicture/:id           controllers.Diary.deletePictureFromActivity(id:Int)
GET     /mypal/activity/unlinkpicture/:id           controllers.Diary.unlinkPictureFromActivity(id:Int)
GET     /mypal/activity/linkpicture/:aid/:pid       controllers.Diary.linkPictureToActivity(aid:Int, pid:Int)
GET     /mypal/picture/delete/:id                   controllers.Diary.deletePictureFromGallery(id:Int)

## ADMIN ##
GET     /admin                          controllers.Admin.admin()
GET     /admin/users                    controllers.Admin.users()
GET     /admin/users/list               controllers.Admin.getUsers()
POST    /admin/users                    controllers.Admin.addUser()
GET     /admin/users/view/:email        controllers.Admin.viewUser(email: String)
GET     /admin/users/view/log/:email    controllers.Admin.getUserLog(email: String)
GET     /admin/users/update/:email      controllers.Admin.updatePageUser(email: String)
POST    /admin/users/update/:email      controllers.Admin.updateUser(email: String)
DELETE  /admin/users/delete/:email      controllers.Admin.deleteUser(email: String)

## TEST ##
GET     /test/datatest              controllers.Test.dataTest()
GET     /test/bootstrap             controllers.Test.showBootstrap()
GET     /test/google                controllers.Test.googleTest()
GET     /test/affectbutton          controllers.Test.affectButton()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)