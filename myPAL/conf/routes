# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /greeting                   controllers.Application.index()
GET     /                           controllers.Application.login()
POST    /                           controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

#Diary
GET     /mypal                              controllers.Application.diary()
GET     /mypal/calendar                     controllers.Application.calendar()
GET     /mypal/calendar/:update             controllers.Application.calendarUpdate(update:String)
GET     /mypal/calendar/:day/:month/:year   controllers.Application.calendarSet(day:String, month:String, year:String)
GET     /mypal/goals                        controllers.Application.goals()

# Admin
GET     /admin                      controllers.Application.admin()
GET     /admin/users                controllers.Application.users()
GET     /admin/users/list           controllers.Application.getUsers()
POST    /admin/users                controllers.Application.addUser()
GET     /admin/users/update/:email  controllers.Application.updatePageUser(email: String)
POST    /admin/users/update/:email  controllers.Application.updateUser(email: String)
DELETE  /admin/users/delete/:email  controllers.Application.deleteUser(email: String)

# Test
GET     /test/datatest              controllers.Application.dataTest()
GET     /test/bootstrap             controllers.Application.showBootstrap()
GET     /test/google                controllers.Application.googleTest()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
#GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes()